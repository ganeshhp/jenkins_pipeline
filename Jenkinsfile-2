pipeline {
    agent  {label 'build-server'}
    stages {
       stage('download_from_artifactory') {
          
            steps {
                curl -uuser1:cmVmdGtuOjAxOjE3NDA4MDk0ODU6bDdmeVhaSWwzRW1hNWlXdTlSOGZpOFM5Q3Y5 -L -O "https://scanvas.jfrog.io/artifactory/webapp-1-generic-local/Helloworld.war"
